    <!-- Fixed Blog Posts Loading Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const SUBSTACK_FEED_URL = 'https://anandoghose.substack.com/feed';
        const blogContainer = document.getElementById('blog-posts-container');
        const errorMessage = document.getElementById('error-message');
        const hardcodedPosts = document.getElementById('hardcoded-posts');
        const retryButton = document.getElementById('retry-button');
        
        // Array of CORS proxies to try
        const CORS_PROXIES = [
          'https://api.allorigins.win/raw?url=',
          'https://yacdn.org/proxy/',
          'https://cors-anywhere.herokuapp.com/',
          'https://thingproxy.freeboard.io/fetch/'
        ];
        
        // Function to format date
        function formatDate(dateString) {
          const date = new Date(dateString);
          const options = { year: 'numeric', month: 'long', day: 'numeric' };
          return date.toLocaleDateString('en-US', options);
        }
        
        // Function to extract the first image from HTML content
        function extractFirstImage(content) {
          const parser = new DOMParser();
          const doc = parser.parseFromString(content, 'text/html');
          const img = doc.querySelector('img');
          return img ? img.getAttribute('src') : null;
        }
        
        // Function to create excerpt from HTML content
        function createExcerpt(content, maxLength = 180) {
          const parser = new DOMParser();
          const doc = parser.parseFromString(content, 'text/html');
          let text = doc.body.textContent || "";
          text = text.replace(/\s+/g, ' ').trim();
          return text.length > maxLength ? text.substring(0, maxLength) + '...' : text;
        }

        // Function to generate schema markup for blog posts
        function generateBlogPostSchema(posts) {
          // Create schema array for blog posts
          const blogPostsSchema = {
            "@context": "https://schema.org",
            "@type": "ItemList",
            "itemListElement": []
          };
          
          // Add each post to the schema
          posts.forEach((post, index) => {
            blogPostsSchema.itemListElement.push({
              "@type": "ListItem",
              "position": index + 1,
              "item": {
                "@type": "BlogPosting",
                "headline": post.title,
                "url": post.link,
                "datePublished": post.pubDate,
                "author": {
                  "@type": "Person",
                  "name": "Anando Ghose"
                },
                "publisher": {
                  "@type": "Person",
                  "name": "Anando Ghose"
                },
                "description": post.excerpt,
                "mainEntityOfPage": {
                  "@type": "WebPage",
                  "@id": post.link
                }
              }
            });
          });
          
          // Add schema to the document
          const script = document.createElement('script');
          script.type = 'application/ld+json';
          script.innerHTML = JSON.stringify(blogPostsSchema);
          document.head.appendChild(script);
        }

        // Function to try fetching with different CORS proxies
        async function fetchWithFallbacks() {
          for (let i = 0; i < CORS_PROXIES.length; i++) {
            try {
              const response = await fetch(CORS_PROXIES[i] + encodeURIComponent(SUBSTACK_FEED_URL));
              
              if (response.ok) {
                const xml = await response.text();
                const success = processXML(xml);
                if (success) return true;
              }
            } catch (error) {
              console.warn(`CORS proxy ${i + 1} failed:`, error);
              continue;
            }
          }
          
          // If all proxies fail, show hardcoded content
          showFallbackContent();
          return false;
        }

        // Process XML data
        function processXML(xml) {
          try {
            const parser = new DOMParser();
            const data = parser.parseFromString(xml, "text/xml");
            
            // Clear loading message
            if (blogContainer) {
              blogContainer.innerHTML = '';
            } else {
              console.error("Blog container element not found");
              return false;
            }
            
            // Get all items
            const items = data.querySelectorAll('item');
            
            if (!items || items.length === 0) {
              console.error("No items found in the XML");
              showFallbackContent();
              return false;
            }
            
            const postsArray = [];
            
            // Process all items
            for (let i = 0; i < items.length; i++) {
              const item = items[i];
              
              // Get required elements, with null checks
              const titleElement = item.querySelector('title');
              const linkElement = item.querySelector('link');
              const pubDateElement = item.querySelector('pubDate');
              const contentElement = item.querySelector('content\\:encoded') || item.querySelector('encoded');
              
              // Skip if any required element is missing
              if (!titleElement || !linkElement || !pubDateElement || !contentElement) {
                console.warn("Skipping item due to missing required elements");
                continue;
              }
              
              // Extract text content with null checks
              const title = titleElement.textContent;
              if (!title || title.trim() === "Coming soon") continue;
              
              const link = linkElement.textContent;
              const pubDate = pubDateElement.textContent;
              const content = contentElement.textContent;
              
              if (!link || !pubDate || !content) {
                console.warn("Skipping item due to empty required content");
                continue;
              }
              
              // Format date and extract image/excerpt
              const formattedDate = formatDate(pubDate);
              const imageUrl = extractFirstImage(content) || '';
              const excerpt = createExcerpt(content);
              
              // Store post data for schema
              postsArray.push({
                title: title,
                link: link,
                pubDate: pubDate,
                excerpt: excerpt
              });
              
              // Create blog card
              const blogCard = document.createElement('article');
              blogCard.className = 'blog-card';
              
              blogCard.innerHTML = `
                ${imageUrl ? `<div class="blog-card-image" style="background-image: url('${imageUrl}')"></div>` : ''}
                <div class="blog-card-content">
                  <span class="blog-date">${formattedDate}</span>
                  <h2 class="blog-title">${title}</h2>
                  <p class="blog-excerpt">${excerpt}</p>
                  <a href="${link}" class="read-more" target="_blank" rel="noopener noreferrer">
                    Read full article <i class="fa-solid fa-arrow-right"></i>
                  </a>
                </div>
              `;
              
              blogContainer.appendChild(blogCard);
            }
            
            // If no posts were added (after filtering)
            if (blogContainer.children.length === 0) {
              showFallbackContent();
              return false;
            }
            
            // Generate schema for posts
            generateBlogPostSchema(postsArray);
            return true;
            
          } catch (error) {
            console.error("Error processing XML:", error);
            showFallbackContent();
            return false;
          }
        }

        // Show hardcoded content as fallback
        function showFallbackContent() {
          if (blogContainer) {
            blogContainer.style.display = 'none';
          }
          if (hardcodedPosts) {
            hardcodedPosts.style.display = 'flex';
          }
          if (errorMessage) {
            errorMessage.style.display = 'block';
          }
        }
        
        // Initial fetch
        fetchWithFallbacks();
        
        // Retry button event listener
        if (retryButton) {
          retryButton.addEventListener('click', function() {
            if (blogContainer) {
              blogContainer.innerHTML = '<div class="loading"><i class="fa-solid fa-spinner"></i> Loading articles...</div>';
              blogContainer.style.display = 'flex';
            }
            if (hardcodedPosts) {
              hardcodedPosts.style.display = 'none';
            }
            if (errorMessage) {
              errorMessage.style.display = 'none';
            }
            fetchWithFallbacks();
          });
        }
      });
